---

<Section class="max-w-screen-xl mx-auto">
    <h2 class="text-2xl lg:text-5xl text-center font-semibold text-dark lg:px-56">{title}</h2>
    <div
        class="w-full lg:max-w-[1280px] grid lg:grid-cols-10 lg:auto-rows-[25rem] gap-4 mx-auto p-4 lg:p-16"
    >
        {
            BENTO.map(({ title, description, id, image, rowSpan }) => (
                <BentoItem
                    class={rowSpan}
                    title={title}
                    description={description}
                    image={image}
                    id={id}
                />
            ))
        }
    </div>
</Section>